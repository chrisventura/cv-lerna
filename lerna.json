{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "version": {
      "message": "chore: bump packages",
      "conventionalCommits": true 
    },
    "publish": {
      "message": "chore: bump and publish packages",
      "conventionalCommits": true,
      "registry": "https://pkgs.dev.azure.com/iqmetrix/_packaging/iqmetrix/npm/registry/"
    }
  },
    "changelogPreset": {
      "name": "conventionalcommits",
      "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}"
    }
}
